<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background_dark"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

                <Toolbar
                    style="@style/Toolbar"
                    android:contentInsetStart="0dp">

                        <ImageView
                            android:id="@+id/guillotine_hamburger"
                            style="@style/ImageView.Hamburger"
                            android:src="@drawable/ic_menu_90"
                            android:layout_marginLeft="16dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="24dp"
                            android:fontFamily="@font/duru_sans"
                            android:text="@string/options"
                            android:textSize="24sp"
                            android:textStyle="bold" />
                </Toolbar>


                <LinearLayout
                    android:id="@+id/options"
                    style="@style/LinearLayout.GuillotineItem"
                    android:layout_marginTop="@dimen/guillotine_medium_margin">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ErasePWD"
                    style="@style/LinearLayout.GuillotineItem"
                    android:layout_marginTop="8dp">

                        <ImageView
                            style="@style/ImageView.GuillotineItem"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginLeft="24dp"
                            android:src="@drawable/recycle"
                            android:contentDescription="TODO"
                            app:tint="#FFFFFF" />

                    <Switch
                        android:id="@+id/pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/duru_sans"
                        android:text="@string/clear_password_when_reboot_to_other_system_slot"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Warn"
                    style="@style/LinearLayout.GuillotineItem"
                    android:layout_marginTop="8dp">

                    <ImageView
                        style="@style/ImageView.GuillotineItem"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="24dp"
                        android:contentDescription="TODO"
                        app:srcCompat="@android:drawable/stat_notify_error"
                        app:tint="#FFFFFF" />

                    <Switch
                        android:id="@+id/NoWarn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/duru_sans"
                        android:text="@string/reboot_whitout_confirmation"
                        android:textSize="16sp" />

                </LinearLayout>

    <LinearLayout
        android:id="@+id/Secpatch"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/patch"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/duru_sans"
            android:text="@string/Android_information"
            android:textSize="16sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:layout_margin="12dp"
        >
        <TableRow
            android:layout_weight=".5"
            android:layout_width="fill_parent"

            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/slotatitle"
                android:textAllCaps="true"
                android:paddingTop="12dp"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Slot A" />
        </TableRow>
        <TableRow
            android:layout_weight=".5"
            android:layout_width="fill_parent"
            android:layout_marginBottom="24dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/slota"
                android:layout_weight=".5"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="No Information" />
        </TableRow>
        <TableRow
            android:layout_weight=".5"
            android:layout_width="fill_parent"

            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/slotbtitle"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_weight=".5"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="Slot B" />
        </TableRow>
        <TableRow
            android:layout_weight=".5"
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/slotb"
                android:layout_marginLeft="12dp"
                android:textAlignment="textStart"
                android:layout_weight=".5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Information"
                android:paddingBottom="12dp"/>
        </TableRow>


    </TableLayout>

</LinearLayout>
