<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <CheckBox
        android:layout_rowSpan="3"
        android:id="@+id/tchecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="16dp"
        android:focusableInTouchMode="false"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:text=""
        android:layout_row="0"
        android:layout_column="0"/>

        <ImageView
            android:layout_rowSpan="3"
            android:id="@+id/appicons"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            tools:srcCompat="@android:mipmap/sym_def_app_icon"
            android:layout_row="0"
            android:layout_column="1"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tappName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_alignParentright="true"
            android:focusable="false"
            android:textSize="18sp"
            android:paddingBottom="0dp"
            android:text="ApplicationName"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/tdataPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_columnWeight="1"
            android:textSize="8sp"
            android:text="Data path"
            android:layout_row="1"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/tcommonPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_alignParentright="true"
            android:focusable="false"
            android:layout_columnWeight="1"
            android:textSize="8sp"
            android:padding="0dp"
            android:text="Common Path"
            android:layout_row="2"
            android:layout_column="2"/>

    </GridLayout>