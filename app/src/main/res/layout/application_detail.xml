<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/tchecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_column="0"
        android:layout_margin="0dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="0dp"
        android:text="" />

        <ImageView
            android:layout_rowSpan="3"
            android:id="@+id/appicons"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            tools:srcCompat="@android:mipmap/sym_def_app_icon"
            android:layout_row="0"
            android:layout_column="1"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tappName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_alignParentright="true"
            android:focusable="false"
            android:textSize="18sp"
            android:paddingBottom="0dp"
            android:text="ApplicationName"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_column="2"/>
        <TextView
            android:id="@+id/tdataPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_columnWeight="1"
            android:textSize="8sp"
            android:text="Data path"
            android:visibility="gone"
            android:layout_row="0"
            android:layout_column="4"/>
        <TextView
            android:id="@+id/tcommonPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_alignParentright="true"
            android:focusable="false"
            android:layout_columnWeight="1"
            android:visibility="gone"
            android:textSize="8sp"
            android:padding="0dp"
            android:text="Common Path"
            android:layout_row="0"
            android:layout_column="5"/>

    <TextView
        android:id="@+id/tData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shared_data"
        android:layout_row="1"
        android:layout_column="2"/>

    <ImageView
        android:id="@+id/lData"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/presence_online"
        app:tint="@color/invernomuto_300"
        android:layout_row="1"
        android:layout_column="3"/>
<!--
    <TextView
        android:id="@+id/tApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shared_app"
        android:layout_row="2"
        android:layout_column="2"/>

    <ImageView
        android:id="@+id/lApp"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/presence_online"
        app:tint="@color/invernomuto_300"
        android:layout_row="2"
        android:layout_column="3"/>
   -->
    </GridLayout>